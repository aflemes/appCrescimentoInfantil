<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aula_android.appCrescimentoInfantil">

    <uses-sdk android:minSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.aula_android.appCrescimentoInfantil.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aula_android.appCrescimentoInfantil.AddNovaCriancaActivity"
            android:label="@string/title_activity_add_nova_crianca"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aula_android.appCrescimentoInfantil.ViewCriancaActivity"
            android:label="@string/title_activity_view_criancas"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.aula_android.appCrescimentoInfantil.AddNovoProgressoActivity"
            android:label="@string/title_activity_add_progresso_crianca"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
